{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src" /* IMPORTANT: Set base URL to your source directory */,
    "paths": {
      "@/*": ["*"] /* This maps @/ to the baseUrl (src/) */,
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@drizzle/*": ["drizzle/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
